<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.MinWidth">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="relativeLayoutBg">@drawable/bg_dialog</item>
        <item name="titleTextColor">@color/title_text_color</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColor">@color/item_text_color</item>
    </style>

    <style name="DialogThemeNight" parent="Theme.AppCompat.Light.Dialog.MinWidth">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="relativeLayoutBg">@drawable/bg_dialog_night</item>
        <item name="titleTextColor">@color/title_text_night_color</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColor">@color/item_text_night_color</item>
    </style>

    <style name="DialogTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:paddingTop">@dimen/list_padding</item>
        <item name="android:paddingLeft">@dimen/list_padding</item>
        <item name="android:paddingRight">@dimen/list_padding</item>
        <item name="android:paddingBottom">@dimen/list_padding</item>
    </style>

    <style name="PrimaryButtonStyle" parent="Base.Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:background">@null</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>
</resources>
